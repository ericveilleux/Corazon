<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>Corazon is a library for building domain models by providing common domain-driven architectural patterns.</Description>
    <AssemblyTitle>Corazon</AssemblyTitle>
    <VersionPrefix>0.0.1</VersionPrefix>
    <Authors>Eric Veilleux</Authors>
    <TargetFrameworks>netstandard2.0;net45</TargetFrameworks>
  </PropertyGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net45' ">
    <PackageReference Include="NodaTime" Version="2.0.0" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'netstandard2.0' ">
    <PackageReference Include="NodaTime" Version="2.4.0" />
  </ItemGroup>
  
</Project>
